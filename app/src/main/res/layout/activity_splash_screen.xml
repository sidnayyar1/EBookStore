<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".SplashScreen">

  <TextView
      android:id="@+id/nameOfApp"
      android:layout_centerInParent="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="E-Book Store"
      android:textSize="35sp"
      android:textColor="@android:color/white"
      android:textStyle="bold"/>
    <TextView
        android:id="@+id/ankita"
        android:layout_below="@+id/nameOfApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ankita Pabbi (C0751145)"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:textSize="16dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/sidharh"
        android:layout_below="@+id/ankita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sidharth Nayyar (C0752828)"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:textSize="16dp"
        android:textStyle="bold"/>

</RelativeLayout>